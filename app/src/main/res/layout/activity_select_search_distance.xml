<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.SelectSearchDistanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:text="Vyber max. vzdálenost [m]"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

        <ListView
            android:id="@+id/selectSearchDistListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="14dp">


        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectDistanceButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK" />

            <Button
                android:id="@+id/selectDistanceButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zrušit" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
