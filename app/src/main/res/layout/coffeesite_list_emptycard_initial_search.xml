<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_empty_card_initial_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="false"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/linear_layout_initial_empty_card_current_search_distance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_range_initial_empty_card_label_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:text="@string/current_range_label" />

            <TextView
                android:id="@+id/current_distance_range_initial_empty_card_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary2"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/initialSearchingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_initial_empty_card_current_search_distance2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/initial_searching"
            android:textColor="#FFE0B2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/csListFotoImageView"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_alignEnd="@+id/noSiteTextViewLabel"
            android:layout_alignParentEnd="true"
            android:background="@drawable/kafe_backround_120x160"
            android:rotation="0"
            android:scaleType="centerInside" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>